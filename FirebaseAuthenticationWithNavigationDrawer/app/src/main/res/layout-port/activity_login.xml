<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_login_background"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:padding="16dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputEmail"
            android:layout_width="match_parent"
            android:textColorHint="#fff"
            app:boxStrokeWidth="10dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextEmail"
                android:hint="Email adresiniz:"
                android:textColor="#fd7953"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputPassword"
            app:passwordToggleEnabled="true"
            android:textColorHint="#fff"
            app:boxStrokeWidth="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputEmail">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Parolanız:"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:textColor="#fd7953"
                />
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:id="@+id/checkboxRememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Beni Hatırla"
            android:layout_below="@id/textInputPassword"/>
        <Button
            android:id="@+id/buttonSignIn"
            android:text="@string/signIn"
            android:background="@color/blue"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:layout_below="@id/checkboxRememberMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/buttonSignUp"
            android:text="Kayıt Ol"
            android:background="@color/blue"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:layout_below="@id/buttonSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>
    </RelativeLayout>
</RelativeLayout>